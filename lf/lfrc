set hidden true # show dotfiles
set ignorecase true # ignore case when searching
set icons true
set drawbox

map <enter> shell
map <esc> quit

cmd delete ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]: "
    read ans
    if [ "$ans" = "y" ]
    then
        rm -rf $fx
        lf -remote 'send echo ✅ File deleted.'
    fi
}}
map DD delete


map m
cmd copy_path ${{
    set -f
    echo "$f" | tr -d '\n' | pbcopy
    lf -remote 'send echo ✅ File path copied.'
}}
map mp copy_path

