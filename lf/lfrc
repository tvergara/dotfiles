set hidden true # show dotfiles
set ignorecase true # ignore case when searching
set icons true
set drawbox

set ifs "\n"

map <enter> shell
map <esc> quit

cmd delete ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]: "
    read ans
    if [ "$ans" = "y" ]
    then
        rm -rf $fx
        lf -remote 'send echo ✅ File deleted.'
    fi
}}
map DD delete

# remove some default mappings
map m
map s
map n

cmd copy_path ${{
    set -f
    echo "$f" | tr -d '\n' | pbcopy
    lf -remote 'send echo ✅ File path copied.'
}}
map mp copy_path

cmd open ${{
    test -L $f && f=$(readlink -f $f)
    $EDITOR $fx
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
    lf -remote 'send echo ✅ Directory created.'
}}
map md mkdir

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}
map mf mkfile

cmd nvim ${{
  $EDITOR
}}
map nvim nvim


cmd fzf_jump ${{
    res="$(fzf --reverse --header='Jump to location'| sed 's/\\/\\\\/g;s/"/\\"/g')"
    if [ -d "$res" ] ; then
        cmd="cd"
    elif [ -f "$res" ] ; then
        cmd="select"
    else
        exit 0
    fi
    lf -remote "send $id $cmd \"$res\""
}}
map <c-p> :fzf_jump

# map shortcuts
map gc cd ~/fintoc/cowry
map gr cd ~/fintoc/fintoc-rails
map gw cd ~/fintoc/wizard
